@model Bookaholic.Models.Promotion

@{
    ViewData["Title"] = "Chi tiết khuyến mãi";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h3 class="mb-4">🔍 Chi tiết khuyến mãi</h3>

<div class="border rounded p-4 bg-light">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Tiêu đề</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3 fw-bold">Nội dung</dt>
        <dd class="col-sm-9">@Model.Message</dd>

        <dt class="col-sm-3 fw-bold">Ngày bắt đầu</dt>
        <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3 fw-bold">Ngày kết thúc</dt>
        <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3 fw-bold">Trạng thái</dt>
        <dd class="col-sm-9">
            @(Model.IsActive ? "✔️ Đang áp dụng" : "❌ Không hoạt động")
        </dd>

        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div class="mt-4 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
