@model Bookaholic.Models.Book

@{
    ViewData["Title"] = "Thêm sách mới";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 class="text-success mb-4">📚 Thêm sách mới</h2>

<div class="row">
    <div class="col-md-7">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Tiêu đề -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Tác giả -->
            <div class="mb-3">
                <label asp-for="AuthorId" class="form-label fw-bold">Tác giả</label>
                <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId">
                    <option value="">-- Chọn tác giả --</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>

            <!-- Người dịch -->
            <div class="mb-3">
                <label asp-for="Translator" class="form-label fw-bold">Người dịch</label>
                <input asp-for="Translator" class="form-control" />
                <span asp-validation-for="Translator" class="text-danger"></span>
            </div>

            <!-- Nhà xuất bản -->
            <div class="mb-3">
                <label asp-for="Publisher" class="form-label fw-bold">Nhà xuất bản</label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <!-- Kích thước -->
            <div class="mb-3">
                <label asp-for="Size" class="form-label fw-bold">Kích thước</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <!-- Trang - Năm - Số lượng -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Pages" class="form-label fw-bold">Số trang</label>
                    <input asp-for="Pages" class="form-control" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="PublishYear" class="form-label fw-bold">Năm XB</label>
                    <input asp-for="PublishYear" class="form-control" />
                    <span asp-validation-for="PublishYear" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold">Số lượng</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <!-- Giá -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Giá khuyến mãi</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="OriginalPrice" class="form-label fw-bold">Giá gốc</label>
                    <input asp-for="OriginalPrice" class="form-control" />
                    <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                </div>
            </div>

            <!-- Mô tả -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Ảnh -->
            <div class="mb-3">
                <label class="form-label fw-bold">Ảnh sách</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Thể loại -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Thể loại</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                    <option value="">-- Chọn thể loại --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Nút -->
            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
