@model Bookaholic.Models.BookReview
@{
    ViewData["Title"] = "Chi tiết bài viết";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h3 class="mb-4 text-info">📄 Chi tiết bài viết</h3>

<div class="row g-4">
    <!-- Ảnh bài viết -->
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title" style="max-height: 300px;" />
        }
        else
        {
            <p class="text-muted fst-italic">Không có ảnh bài viết</p>
        }
    </div>

    <!-- Thông tin bài viết -->
    <div class="col-md-8">
        <div class="mb-2"><strong>Tiêu đề:</strong> @Model.Title</div>
        <div class="mb-2"><strong>Nội dung:</strong><br /> @Html.Raw(Model.Content)</div>
        <div class="mb-2"><strong>Sách:</strong> @Model.Book?.Title</div>
        <div class="mb-2"><strong>Người đăng:</strong> @Model.User?.UserName</div>
        <div class="mb-2"><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
        <div class="mb-2"><strong>Hiển thị:</strong> @(Model.IsPublished ? "✅ Có" : "❌ Không")</div>

        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.ReviewId" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>
</div>
