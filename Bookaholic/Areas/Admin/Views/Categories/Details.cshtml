@model Bookaholic.Models.Category

@{
    ViewData["Title"] = "Chi tiết thể loại";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 class="mb-4 text-success">@ViewData["Title"]</h2>

<div class="border p-4 rounded shadow-sm bg-white">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold">Tên thể loại</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning me-2">
        ✏️ Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        ↩️ Quay lại danh sách
    </a>
</div>
