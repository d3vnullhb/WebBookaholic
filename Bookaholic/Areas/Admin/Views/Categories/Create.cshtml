@model Bookaholic.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm thể loại";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 class="mb-4 text-success">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-white">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="CategoryName" class="form-label fw-bold">Tên thể loại</label>
        <input asp-for="CategoryName" class="form-control" placeholder="Nhập tên thể loại..." />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success me-2">➕ Tạo mới</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại danh sách</a>
</form>
