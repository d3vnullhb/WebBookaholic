@model Bookaholic.Models.Author

@{
    ViewData["Title"] = "Chi tiết tác giả";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 class="text-primary mb-4">📖 Chi tiết tác giả</h2>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Tên tác giả</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3 fw-bold">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="height: 120px; border-radius: 6px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>

        <dt class="col-sm-3 fw-bold">Tiểu sử</dt>
        <dd class="col-sm-9">@Model.Bio</dd>

        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div class="d-flex gap-2">
    <a href="/Admin/Authors/Edit/@Model.AuthorId" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Sửa
    </a>
    <a href="/Admin/Authors" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
