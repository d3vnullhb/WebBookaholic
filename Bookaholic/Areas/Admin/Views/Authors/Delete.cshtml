@model Bookaholic.Models.Author

@{
    ViewData["Title"] = "Xoá tác giả";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Xoá tác giả</h2>

<div class="alert alert-warning">
    <strong>Bạn có chắc chắn muốn xoá tác giả sau không?</strong>
</div>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Tên tác giả</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3 fw-bold">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="height: 120px; border-radius: 6px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>

        <dt class="col-sm-3 fw-bold">Tiểu sử</dt>
        <dd class="col-sm-9">@Model.Bio</dd>

        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AuthorId" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xác nhận xoá
        </button>
        <a href="/Admin/Authors" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</form>
