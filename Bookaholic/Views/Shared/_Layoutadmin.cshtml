<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản trị - Bookaholic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 300px;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #198754;
            color: white;
            padding: 20px;
            font-size: 1.05rem; 
        }

            .sidebar .nav-link {
                padding: 12px 10px; 
                margin-bottom: 6px; 
                font-weight: 500;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #157347;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 300px;
            padding: 30px;
        }
    </style>

</head>
<body>
    <div class="sidebar">
        <h4 class="mb-4 text-center">📚<br />Bookaholic</h4>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link text-white" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Trang quản trị</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Books" asp-action="Index"><i class="bi bi-book me-2"></i>Quản lý sách</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Authors" asp-action="Index"><i class="bi bi-person-lines-fill me-2"></i>Quản lý tác giả</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i>Quản lý thể loại</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Promotions" asp-action="Index"><i class="bi bi-percent me-2"></i>Quản lý khuyến mãi</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Orders" asp-action="Index"><i class="bi bi-basket me-2"></i>Quản lý đơn hàng</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Users" asp-action="Index"><i class="bi bi-people me-2"></i>Quản lý người dùng</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Contacts" asp-action="Index"> <i class="bi bi-chat-left-text me-2"></i> Liên hệ khách hàng </a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="BookReviews" asp-action="Index"><i class="bi bi-chat-square-text me-2"></i>Quản lý bài viết</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Statistics" asp-action="Index"><i class="bi bi-bar-chart-line me-2"></i>Thống kê</a></li>
        </ul>
    </div>

    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <span class="text-muted">Xin chào, <strong>@User.Identity?.Name</strong></span>

            <div class="d-flex align-items-center">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-box-arrow-left"></i> Trang chính
                </a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-power"></i> Đăng xuất
                    </button>
                </form>
            </div>
        </div>

        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
