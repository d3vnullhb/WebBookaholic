@model Bookaholic.Models.UserAddress

@{
    ViewData["Title"] = "Thêm địa chỉ mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3 border-end">
            @Html.Partial("_AccountSidebar")
        </div>
        <div class="col-md-9">
            <h4>📍 Thêm địa chỉ mới</h4>

            <form asp-action="CreateAddress" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Province" class="form-label">Tỉnh / Thành phố</label>
                    <input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="District" class="form-label">Quận / Huyện</label>
                    <input asp-for="District" class="form-control" />
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ward" class="form-label">Phường / Xã</label>
                    <input asp-for="Ward" class="form-control" />
                    <span asp-validation-for="Ward" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Detail" class="form-label">Địa chỉ chi tiết</label>
                    <input asp-for="Detail" class="form-control" />
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsDefault" class="form-check-input" />
                    <label asp-for="IsDefault" class="form-check-label">Đặt làm địa chỉ mặc định</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Addresses" class="btn btn-secondary">⬅ Quay lại</a>
                    <input type="submit" value="Lưu địa chỉ" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
