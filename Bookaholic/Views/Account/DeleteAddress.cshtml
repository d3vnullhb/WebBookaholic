@model Bookaholic.Models.UserAddress

@{
    ViewData["Title"] = "Xóa địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3 border-end">
            @Html.Partial("_AccountSidebar")
        </div>
        <div class="col-md-9">
            <h4 class="mb-3 text-danger">🗑️ Xóa địa chỉ</h4>
            <p>Bạn có chắc chắn muốn xóa địa chỉ này không?</p>

            <div class="border rounded bg-light p-3 mb-3">
                <p><strong>Địa chỉ:</strong> @Model.Detail, @Model.Ward, @Model.District, @Model.Province</p>
                <p><strong>Địa chỉ mặc định:</strong> @(Model.IsDefault ? "Có" : "Không")</p>
            </div>

            <form asp-action="DeleteAddress" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Addresses" class="btn btn-secondary">⬅ Huỷ</a>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
