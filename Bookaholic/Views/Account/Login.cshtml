@model Bookaholic.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập tài khoản";
}

<div class="container mt-5">
    <div class="row shadow rounded overflow-hidden border" style="border: 1px solid #ddd;">
        <div class="col-md-7 p-4 bg-white">
            <h4 class="text-success fw-bold mb-4">Đăng nhập tài khoản</h4>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email *</label>
                    <input asp-for="Email" class="form-control bg-light" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Password" class="form-label fw-bold">Mật khẩu *</label>
                    <input asp-for="Password" class="form-control bg-light" type="password" id="passwordInput" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="bi bi-eye-slash toggle-password" id="togglePassword"
                       style="position: absolute; top: 38px; right: 15px; cursor: pointer;"></i>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <button type="submit" class="btn btn-success w-100 fw-bold">ĐĂNG NHẬP</button>
            </form>

            <div class="mt-3 text-center">
                <p>Bạn quên mật khẩu? Bấm <a href="#">vào đây</a></p>
            </div>
        </div>

        <div class="col-md-5 bg-success text-white p-4 d-flex flex-column justify-content-between">
            <div>
                <h3 class="fw-bold mb-4" style="font-size: 1.6rem;">Quyền lợi với thành viên</h3>
                <ul style="line-height: 2; font-size: 1.05rem;">
                    <li>Vận chuyển siêu tốc</li>
                    <li>Sản phẩm đa dạng</li>
                    <li>Đổi trả dễ dàng</li>
                    <li>Tích điểm đổi quà</li>
                    <li>Giảm giá đến 10%</li>
                </ul>
            </div>
            <div class="text-center">
                <a asp-action="Register" asp-controller="Account" class="btn btn-outline-light mt-3">Đăng ký</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("passwordInput");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });
    </script>
}
