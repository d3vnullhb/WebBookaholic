@model Bookaholic.Models.ApplicationUser

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fullName = $"{Model.LastName} {Model.FirstName}";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3 border-end">
            @Html.Partial("_AccountSidebar")
        </div>

        <div class="col-md-9">
            <h4 class="mb-3">📄 Thông tin cá nhân</h4>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <div class="border rounded p-3 bg-light">
                <p><strong>Họ và tên:</strong> @fullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
            </div>

            <a class="btn btn-primary mt-3" href="/Account/EditInfo">✏️ Cập nhật thông tin</a>
            <a class="btn btn-warning mt-3 ms-2" href="/Account/ChangePassword">🔐 Đổi mật khẩu</a>
        </div>
    </div>
</div>
