@model Bookaholic.Models.ApplicationUser

@{
    ViewData["Title"] = "Cập nhật thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <!-- SIDEBAR -->
        <div class="col-md-3 border-end">
            @Html.Partial("_AccountSidebar")
        </div>

        <!-- FORM CẬP NHẬT -->
        <div class="col-md-9">
            <h4 class="mb-4">✏️ Cập nhật thông tin cá nhân</h4>

            <form asp-action="EditInfo" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label">Tên</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label">Họ</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Info" class="btn btn-secondary">⬅ Quay lại</a>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
